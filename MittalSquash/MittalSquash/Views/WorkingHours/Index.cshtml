@model IEnumerable<MittalSquash.Data.WorkingHour>

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area">
    <!-- Breadcumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Settings</a></li>
        </ol>
    </nav>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### Blog Area Start ##### -->
<section class="blog-area blog-page" style="padding-top: 20px">
    <div class="container-fluid">
        <div class="row">
            <!-- Single Blog Area -->
            <div class="col-12">
                <div class="single-blog-area mb-100 wow fadeInUp" data-wow-delay="500ms">
           
                    <!-- Blog Content -->

                    <div class="blog-content">
                        <a href="#" class="blog-headline">
                            <h4>Working Hours</h4>
                        </a>
                        @*<a href="#" class="btn clever-btn pull-right" onclick="window.location = '@Url.Action("Create", "WorkingHours")'">Create New</a>*@
                        <br /><br />
                        <table class="table">
                            <tr>
                                <th>
                                    <label>Work Day</label>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DayOfWeek)
                                </th>
                                <th>
                                    <label>Start Time</label>
                                </th>
                                <th>
                                    <label>End Time</label>
                                </th>
                               
                                <th>
                                    @Html.DisplayNameFor(model => model.isActive)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WorkDay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DayOfWeek)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartTimeHour) :
                                        @Html.DisplayFor(modelItem => item.StartTimeMinute)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndTimeHour) :
                                        @Html.DisplayFor(modelItem => item.EndTimeMinute)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.isActive)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
                                    </td>
                                </tr>
                            }

                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- ##### Blog Area End ##### -->
