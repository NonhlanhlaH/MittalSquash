                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </div>

        <!-- Navbar Area -->
        <div class="clever-main-menu">
            <div class="classy-nav-container breakpoint-off">
                <!-- Menu -->
                <nav class="classy-navbar justify-content-between" id="cleverNav">

                    <!-- Logo -->
                    <a class="nav-brand" href="index.html"><h4>Mittal Squash Club</h4></a>

                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler"><span></span><span></span><span></span></span>
                    </div>

                    <!-- Menu -->
                    <div class="classy-menu">

                        <!-- Close Button -->
                        <div class="classycloseIcon">
                            <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                        </div>

                        <!-- Nav Start -->
                        <div class="classynav">
                            <ul>
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home") </li> | 
                                
                            </ul>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="login-state d-flex align-items-center">
                                    <div class="user-name ml-30 mr-30">
                                        <div class="dropdown">
                                            <a class="dropdown-toggle" href="#" role="button" id="userName" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">  Admin </a> 
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userName">
                                                <a href="~/Users/Index" class="dropdown-item"> <i class="fa fa-square"></i> <span>Manage Users</span> </a>
                                                <a href="~/WorkingHours/Index" class="dropdown-item"> <i class="fa fa-square"></i> <span>Working Hours</span> </a>
                                                <a href="~/Resources/Index" class="dropdown-item"> <i class="fa fa-square"></i> <span>Resources</span> </a>
                                                <a href="~/Booking/Manage" class="dropdown-item"> <i class="fa fa-square"></i> <span>Manage Bookings</span> </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            }
                            @Html.Partial("_LoginPartial")
                            <!-- Register / Login -->
                            <div class="register-login-area">
                                
                      
                            </div>

                        </div>
                        <!-- Nav End -->
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- ##### Header Area End ##### -->

@RenderBody()

